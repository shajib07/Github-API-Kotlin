<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.atahar.githubapi.presentation.UserDetailsViewModel" />

        <import type="android.view.View" />

    </data>

    <ScrollView
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/user_avatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:visibility="@{viewModel.githubUser.avatarUrl == null ? View.GONE : View.VISIBLE}"
                app:imageUrl="@{viewModel.githubUser.avatarUrl}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@{viewModel.githubUser.name}"
                android:textSize="20sp"
                android:visibility="@{viewModel.githubUser.name == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_avatar"
                tools:text="Name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{viewModel.githubUser.login}"
                android:textSize="16sp"
                android:visibility="@{viewModel.githubUser.login == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                tools:text="Login" />

            <View
                android:id="@+id/followers_center"
                android:layout_width="1px"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@color/cardview_dark_background"
                android:visibility="@{viewModel.githubUser.followers == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_login" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="followers"
                android:textSize="14sp"
                android:visibility="@{viewModel.githubUser.followers == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBaseline_toBottomOf="@id/followers_center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/followers_center"
                tools:layout_editor_absoluteY="124dp"
                tools:text="followers" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_followers_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewModel.githubUser.followers)}"
                android:textSize="18sp"
                android:visibility="@{viewModel.githubUser.followers == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toTopOf="@id/user_followers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/followers_center"
                tools:text="233" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="following"
                android:textSize="14sp"
                android:visibility="@{viewModel.githubUser.following == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBaseline_toBottomOf="@id/followers_center"
                app:layout_constraintLeft_toLeftOf="@id/followers_center"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="124dp"
                tools:text="followers" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_following_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewModel.githubUser.following)}"
                android:textSize="18sp"
                android:visibility="@{viewModel.githubUser.following == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toTopOf="@id/user_following"
                app:layout_constraintLeft_toLeftOf="@id/followers_center"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="233" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{viewModel.githubUser.company}"
                android:textSize="16sp"
                android:visibility="@{viewModel.githubUser.company == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_following"
                tools:text="company" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{viewModel.githubUser.location}"
                android:textSize="16sp"
                android:visibility="@{viewModel.githubUser.location == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_company"
                tools:text="location" />

            <ProgressBar
                android:id="@+id/loadMoreProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>